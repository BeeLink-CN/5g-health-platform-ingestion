{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "vitals.json",
    "title": "Vitals Record",
    "description": "Patient vitals measurement record",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for this vitals record"
        },
        "patient_id": {
            "type": "string",
            "format": "uuid",
            "description": "Patient identifier (UUID)"
        },
        "recorded_at": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp when vitals were recorded"
        },
        "heart_rate": {
            "type": "integer",
            "minimum": 20,
            "maximum": 300,
            "description": "Heart rate in beats per minute"
        },
        "blood_pressure": {
            "type": "object",
            "properties": {
                "systolic": {
                    "type": "integer",
                    "minimum": 50,
                    "maximum": 300,
                    "description": "Systolic blood pressure in mmHg"
                },
                "diastolic": {
                    "type": "integer",
                    "minimum": 30,
                    "maximum": 200,
                    "description": "Diastolic blood pressure in mmHg"
                }
            },
            "required": [
                "systolic",
                "diastolic"
            ]
        },
        "temperature": {
            "type": "number",
            "minimum": 30.0,
            "maximum": 45.0,
            "description": "Body temperature in Celsius"
        },
        "oxygen_saturation": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "description": "Blood oxygen saturation percentage (SpO2)"
        },
        "device_id": {
            "type": "string",
            "description": "Identifier of the device that recorded the vitals"
        }
    },
    "required": [
        "id",
        "patient_id",
        "recorded_at"
    ],
    "additionalProperties": false
}